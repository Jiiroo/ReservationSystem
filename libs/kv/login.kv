<Login>
    name: 'login'
    usr_name: usr_name
    usr_pass: usr_pass

    canvas:
        Color:
            rgba: 0/255, 139/255, 139/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        MDTextField:
            id: usr_name
            hint_text: 'Email'
            multiline: False
            write_tab: False
            color_mode: 'custom'
            line_color_focus: 1,1,1,1
            size_hint: .6, .1
            pos_hint:{'center_x': .5, 'center_y': .6}

        MDTextField:
            id: usr_pass
            hint_text: 'Password'
            multiline: False
            write_tab: False
            password: True
            color_mode: 'custom'
            line_color_focus: 1,1,1,1
            size_hint: .6, .1
            pos_hint:{'center_x': .5, 'center_y': .5}

        MDFillRoundFlatButton:
            text:'Log In'
            markup: True
            md_bg_color: 0/255,206/255,209/255, 1
            size_hint: .6, .08
            pos_hint: {'center_x': .5, 'center_y': .35}
            on_release: if root.usr_login() == True: app.root.current = 'nav_screen'

        MDTextButton:
            text: '[color=#A9A9A9][b]Sign Up[/b][/color]'
            markup: True
            pos_hint: {'center_x': .5, 'center_y': .15}
            size_hint: .2, .05
            on_release: app.root.current = 'register'

