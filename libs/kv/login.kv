<Login>
    name: 'login'
    usr_name: usr_name
    usr_pass: usr_pass

    BoxLayout:
        FitImage:
            source: 'assets/images/bg_login.png'
            size_hint_x: 1.25

        BoxLayout:
            orientation: 'vertical'

            FloatLayout:

                MDTextField:
                    id: usr_name
                    mode: 'rectangle'
                    size_hint_x: .7
                    pos_hint: {'center_y': .6, 'center_x': .5}
                    hint_text: 'Email'
                    color_mode: 'custom'
                    line_color_focus: rgba('#442c2e')


                MDTextField:
                    id: usr_pass
                    mode: 'rectangle'
                    hint_text: 'Password'
                    password_mask: 'â€¢'
                    password: True
                    size_hint_x: .7
                    color_mode: 'custom'
                    line_color_focus: rgba('#442c2e')
                    pos_hint: {'center_y': .5, 'center_x': .5}


    BoxLayout:
        orientation: 'vertical'
        FloatLayout:
            MDFillRoundFlatButton:
                text:'[font=assets/fonts/Rubik/Rubik-Light.ttf][color=#A9A9A9][color=#442c2e]                 Log In                 [/color][/font]'
                markup: True
                #size_hint_x: .3
                md_bg_color: rgba('#FEDBD0')
                pos_hint: {'center_x': .8, 'center_y': .35}
                on_release: if root.usr_login() == True: app.root.current = 'nav_screen'


            MDTextButton:
                text: "[font=assets/fonts/Rubik/Rubik-Light.ttf][color=#A9A9A9][b]Don't have an account? [/b][/color][color=#442c2e][u]Sign Up[/u][/color][/font]"
                pos_hint: {'center_x': .8, 'center_y': .30}
                markup: True
                on_release: app.root.current = 'register'

    FloatLayout:
        MDLabel:
            text: '[font=assets/fonts/Rubik/Rubik-Light.ttf]Welcome,\nStranger![/font]'
            markup: True
            font_style: 'H2'
            halign: 'center'
            pos_hint: {'center_x': .75, 'center_y': .8}




