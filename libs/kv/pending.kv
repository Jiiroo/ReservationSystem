<PendingCard>
    orientation: "vertical"
    size_hint: None, None
    size: "300dp", "200dp"
    radius: [20,]

    MDBoxLayout:
        orientation: "vertical"
        cols: 2
        MDBoxLayout:
            MDLabel:
                text: "Reservation ID: " + root.res_id
        MDBoxLayout:
            MDLabel:
                text: "Date: " + root.date
        MDBoxLayout:
            MDLabel:
                text: "Time: " + root.time_pick
        MDBoxLayout:
            MDLabel:
                text: "Your Number: " + str(root.q_number)

        MDBoxLayout:
            AnchorLayout:
                anchor_x: 'center'

                MDFlatButton:
                    text: 'Cancel'
                    on_release:
                        root.delete_item()

            AnchorLayout:
                anchor_x: 'center'
                MDFlatButton:
                    text: 'View Receipt'
                    on_release:
                        root.view_receipt()

<ReceiptCard>
    orientation: "vertical"
    size_hint: 1, 100
    padding: '10dp'


    MDBoxLayout:
        orientation: 'horizontal'
        cols: 3
        MDLabel:
            text: str(root.name) + f' {root.size_uniform}'
        MDLabel:
            text: str(root.count)
        MDLabel:
            text: str(root.price)


<ViewReceipt>
    size_hint: None, None
    size: "500dp", "600dp"
    canvas:
        Color:
            rgba: rgba(app.colors(0))
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 1,1
        cols: 1

        MDBoxLayout:
            size_hint: 1, .2
            MDLabel:
                text: 'Product Name'
            MDLabel:
                text: 'Count'
            MDLabel:
                text: 'Price'
        MDBoxLayout:
            cols: 1
            ScrollView:
                MDGridLayout:
                    adaptive_height: True
                    id: dialog_content
                    cols: 1
        MDBoxLayout:
            size_hint: 1, .2
            MDLabel:
                text: ''
            MDLabel:
                text: 'Total'
            MDLabel:
                text: str(root.total_price)

<Pending>
    name: 'cart'
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Pending'
            anchor_title: 'center'
            elevation: 10
            md_bg_color: rgba('#FEDBD0')
            specific_text_color: rgba('#442c2e')

        ScrollView:
            MDGridLayout:
                id: content

                adaptive_height: True
                cols: 3
                padding: '25dp'
                spacing: '15dp'

