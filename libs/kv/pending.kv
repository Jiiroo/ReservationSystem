<PendingCard>
    orientation: "vertical"
    size_hint: None, None
    size: "300dp", "200dp"
    canvas:
        Color:
            rgba: rgba('#FEDBD0')
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: "Reservation ID: " + root.res_id
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'
                padding_x: dp(20)
                padding_y: dp(20)
            MDLabel:
                text: "Date: " + root.date
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'
                padding_x: dp(20)

            MDLabel:
                text: "Time: " + root.time_pick
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'
                padding_x: dp(20)

            MDLabel:
                text: "Your ticket no.: " + str(root.q_number)
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'
                padding_x: dp(20)

        BoxLayout:
            spacing: '80sp'
            padding_x: dp(20)
            MDTextButton:
                pos_hint: {'center_y': .2, 'center_x': .1}
                text: '[font=assets/fonts/Rubik/Rubik-Light.ttf]Cancel Order[/font]'
                markup: True
                theme_text_color: "Custom"
                text_color: rgba('#442c2e')
                on_release:
                    root.delete_item()

            MDRectangleFlatButton:
                text: '[font=assets/fonts/Rubik/Rubik-Light.ttf]View Receipt[/font]'
                markup: True
                theme_text_color: "Custom"
                text_color: rgba('#442c2e')
                line_color: rgba('#442c2e')

                on_release:
                    root.view_receipt()

<ReceiptCard>
    orientation: "vertical"
    size_hint: 1, 100
    padding: '10dp'


    MDBoxLayout:
        orientation: 'horizontal'
        cols: 3
        MDLabel:
            size_hint: 1, .2
            text: str(root.name)

        MDLabel:
            text: f' {root.size_uniform}'
            size_hint: .3, .2

        MDLabel:
            text: str(root.count)
            size_hint: .3, .2

        MDLabel:
            text: str(root.price)
            size_hint: .2, .2


<ViewReceipt>
    size_hint: None, None
    size: "500dp", "600dp"
    canvas:
        Color:
            rgba: rgba(app.colors(0))
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 1,1
        cols: 1

        MDBoxLayout:
            spacing: '20sp'
            MDLabel:
                text: 'Product Name'
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'
                padding_x: dp(20)

            MDLabel:
                text: ''
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'

            MDLabel:
                text: 'Quantity'
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'
                size_hint_x: .5

            MDLabel:
                text: 'Price'
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'
                size_hint_x: .5

        BoxLayout:
            ScrollView:

                MDGridLayout:
                    padding: [20,]
                    spacing: '20sp'
                    adaptive_height: True
                    id: dialog_content
                    cols: 1
        BoxLayout:
            spacing: '20sp'

            MDLabel:
                text: 'Total'
                halign: 'center'
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'
                padding_x: dp(20)

            MDLabel:
                text: str(root.total_price)
                font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
                font_style: 'Button'

<Pending>
    name: 'cart'
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Pending'
            anchor_title: 'center'
            elevation: 10
            md_bg_color: rgba('#FEDBD0')
            specific_text_color: rgba('#442c2e')

        ScrollView:
            MDGridLayout:
                id: content
                adaptive_height: True
                cols: 3
                padding: '25dp'
                spacing: '15dp'

