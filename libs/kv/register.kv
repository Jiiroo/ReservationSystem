<Register>
    name: 'register'
    usr_name: usr_name
    usr_email: usr_email
    usr_pass1: usr_pass1
    usr_pass2: usr_pass2

    BoxLayout:
        FloatLayout:
            Image:
                source: 'assets/images/bg_login.png'
                pos: 300, 0

    BoxLayout:
        orientation: 'vertical'

        FloatLayout:
            MDLabel:
                text: '[font=assets/fonts/Rubik/Rubik-Light.ttf]Create your\n  account here![/font]'
                markup: True
                font_style: 'H2'
                halign: 'center'
                pos_hint: {'center_x': .15, 'center_y': .85}
            MDTextField:
                id: usr_name
                hint_text: 'Name'
                color_mode: 'custom'
                line_color_focus: rgba('#442c2e')
                mode: 'rectangle'
                size_hint_x: .3
                pos_hint: {'center_x': .2, 'center_y': .7}

            MDTextField:
                id: usr_email
                hint_text: 'Email'
                color_mode: 'custom'
                line_color_focus: rgba('#442c2e')
                mode: 'rectangle'
                size_hint_x: .3
                pos_hint: {'center_x': .2, 'center_y': .6}

            MDTextField:
                id: usr_pass1
                hint_text: 'Password'
                password: True
                password_mask: '•'
                color_mode: 'custom'
                line_color_focus: rgba('#442c2e')
                mode: 'rectangle'
                size_hint_x: .3
                pos_hint: {'center_x': .2, 'center_y': .5}

            MDTextField:
                id: usr_pass2
                hint_text: 'Confirm Password'
                password_mask: '•'
                password: True
                color_mode: 'custom'
                line_color_focus: rgba('#442c2e')
                mode: 'rectangle'
                size_hint_x: .3
                pos_hint: {'center_x': .2, 'center_y': .4}

            MDFillRoundFlatButton:
                text:'[font=assets/fonts/Rubik/Rubik-Light.ttf][color=#442c2e][b]                    Sign Up                    [/b][/color][/font]'
                markup: True
                md_bg_color: rgba('#FEDBD0')
                pos_hint: {'center_x': .2, 'center_y': .3}
                on_release: if root.register() is True: app.root.current = 'login'

            MDTextButton:
                text: "[font=assets/fonts/Rubik/Rubik-Light.ttf][color=#A9A9A9]Already have an account?[/color][color=#442c2e][u] Sign In[/u][/color][/font]"
                markup: True
                pos_hint: {'center_x': .2, 'center_y': .25}
                on_release: app.root.current = 'login'


<ErrorDialog2@BoxLayout>:
    orientation: "vertical"
    spacing: dp(10)
    padding: dp(20)

    MDLabel:
        text: "[font=assets/fonts/Rubik/Rubik-Light.ttf]OOPPSS[/font]"
        halign: "center"
        theme_text_color: "Custom"
        text_color: .9, 0, 0, 1

    MDLabel:
        text: "[font=assets/fonts/Rubik/Rubik-Light.ttf]Password doesn't match[/font]"
        markup: True
        halign: "center"
        theme_text_color: "Custom"
        text_color: .9, 0, 0, 1
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Dismiss"
        md_bg_color: .9, 0, 0, 1
        pos_hint: {"center_x": .5}


<ErrorDialog3@BoxLayout>:
    orientation: "vertical"
    spacing: dp(10)
    padding: dp(20)

    MDLabel:
        text: "[font=assets/fonts/Rubik/Rubik-Light.ttf]Invalid Entry[/font]"
        halign: "center"
        theme_text_color: "Custom"
        text_color: .9, 0, 0, 1

    MDLabel:
        text: "[font=assets/fonts/Rubik/Rubik-Light.ttf]Don't leave empty field[/font]"
        markup: True
        halign: "center"
        theme_text_color: "Custom"
        text_color: .9, 0, 0, 1
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Dismiss"
        md_bg_color: .9, 0, 0, 1
        pos_hint: {"center_x": .5}

