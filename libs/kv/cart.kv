
<WarningDialog4@BoxLayout>
    orientation: "vertical"
    padding: dp(20)

    MDLabel:
        text: "[font=assets/fonts/Rubik/Rubik-Light.ttf]Select Morning or Afternoon[/font]"
        markup: True
        halign: "center"
        valign: "center"
        theme_text_color: "Custom"
        text_color: rgba('#442c2e')

    MDFillRoundFlatButton:
        id: submit
        text: "Okay"
        pos_hint: {"center_x": .5}
        md_bg_color: 1, .75, 0, 1

<CartCard>
    orientation: "vertical"
    size_hint: None, None
    size: "300dp", "300dp"
    radius: [20,]

    MDBoxLayout:
        cols: 1
        orientation: "vertical"
        size_hint: 1, 1
        AnchorLayout:
            anchor_x: 'center'

            FitImage:
                source: f'assets/images/{root.category}{root.product_id}.png'
                size_hint_y: 1
                pos_hint: {"top": 1}
                radius: [20, 20, 0, 0, ]


        MDLabel:
            size_hint: 1, .2
            text: f"[font=assets/fonts/Rubik/Rubik-Medium.ttf]{root.name}[/font]"
            markup: True
            font_style: "H6"
            theme_text_color: 'Custom'
            halign: 'center'
            text_color: rgba('#442c2e')

        OneLineAvatarIconListItem:
            text: '                    '+ str(root.count)

            IconLeftWidget:
                icon: 'plus'
                on_press:
                    if root.count != root.stocks: root.count += 1

                    root.update()

            IconRightWidget:
                icon: 'minus'
                on_press:
                    if root.count > 0: root.count -= 1

                    root.update()

        MDIconButton:
            icon: 'trash-can-outline'
            theme_text_color: 'Custom'
            text_color: rgba('#442c2e')
            pos_hint: {'center_x': .9, 'center_y': .3}
            on_press:
                root.delete_item()


<IconListItem>

    IconLeftWidget:
        icon: 'weather-sunny'

<ConfirmDialog>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"

    BoxLayout:
        orientation: 'vertical'
        spacing: '40sp'
        MDRaisedButton:
            text: 'Open Calendar'
            md_bg_color: rgba('#FEDBD0')
            theme_text_color: 'Custom'
            text_color: rgba('#442c2e')
            pos_hint: {'center_x': .5, 'center_y': .7}
            on_release:  root.show_date_picker()

        MDTextField:
            id: field
            pos_hint: {'center_x': .5}
            size_hint_x: None
            width: "200dp"
            hint_text: "Select Time"
            on_focus: if self.focus: root.menu.open()

    MDRaisedButton:
        id:raised
        elevation: 15
        text: 'Confirm'
        md_bg_color: rgba('#FEDBD0')
        theme_text_color: 'Custom'
        text_color: rgba('#442c2e')
        pos_hint: {'center_x': .9}
        on_release:
            root.save_items()




<Cart>
    name: 'cart'
    BoxLayout:
        orientation: 'vertical'


        MDToolbar:
            title: 'Cart'
            anchor_title: 'center'
            elevation: 10
            md_bg_color: rgba('#FEDBD0')
            specific_text_color: rgba('#442c2e')

        RelativeLayout:
            ScrollView:
                MDGridLayout:
                    id: content
                    adaptive_height: True
                    cols: 3
                    padding: '25dp'
                    spacing: '15dp'

            MDFillRoundFlatIconButton:
                icon: 'cart'
                icon_color: rgba('#442c2e')
                text: '        Confirm Order        '
                markup: True
                font_name: "assets/fonts/Rubik/Rubik-Light.ttf"
                font_style: 'Button'
                font_size: '15sp'
                theme_text_color: 'Custom'
                text_color: rgba('#442c2e')
                md_bg_color: rgba('#FEDBD0')
                pos_hint: {'center_x': .5, 'center_y': .1}
                on_release: root.show_confirmation_dialog()



<SuccessDialog@BoxLayout>:
    orientation: "vertical"
    padding: dp(40)
    MDLabel:
        text: "[font=assets/fonts/Rubik/Rubik-Medium.ttf]Successful![/font]"
        markup: True
        size_hint_y: None
        height: self.texture_size[1]
        halign: "center"
        valign: "center"
        bold: True
        theme_text_color: "Custom"
        text_color: rgba('#442c2e')

    MDLabel:
        text: "[font=assets/fonts/Rubik/Rubik-Light.ttf]Your order is now ready[/font]"
        markup: True
        halign: "center"
        valign: "top"
        theme_text_color: "Custom"
        text_color: rgba('#442c2e')


    MDFillRoundFlatButton:
        id: button
        text: "[font=assets/fonts/Rubik/Rubik-Light.ttf]Confirm[/font]"
        markup: True
        theme_text_color: 'Custom'
        text_color: rgba('#442c2e')
        md_bg_color: rgba('#FEDBD0')
        pos_hint: {"center_x": .5}