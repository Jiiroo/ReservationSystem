#:import get_color_from_hex kivy.utils.get_color_from_hex

<NavLayout>:
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Temporary"
            md_bg_color: rail.md_bg_color

        MDBoxLayout:
            MDNavigationRail:
                id: rail
                md_bg_color: get_color_from_hex(app.colors(1))
                color_normal: get_color_from_hex(app.colors(2))
                color_active: get_color_from_hex(app.colors(0))
                use_resizeable: True
                rail_state: "open"


                MDNavigationRailItem:
                    icon: "shopping"
                    text: "Shop"
                    on_release:
                        app.show_screen('screen2')

                MDNavigationRailItem:
                    icon: "cart"
                    text: "Cart"

                MDNavigationRailItem:
                    icon: "cog"
                    text: "Settings"

            ScreenManager:
                id: manage
                Home:
                    id: home
                    name: 'home'

