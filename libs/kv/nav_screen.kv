#:import get_color_from_hex kivy.utils.get_color_from_hex

<NavLayout>:
    name: 'Navigationrail'
    AKNavigationrail:
        id: rail

        navigation_bg_color: get_color_from_hex('#FEDBD0')
        active_color: rgba('#ffffff')
        item_radius: "0dp"


        AKNavigationrailCustomItem:
            size_hint_y: None
            height: dp(60)
            padding: dp(5)
            MDLabel:
                text: 'Welcome!'
                markup: True
                font_style: 'H6'
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: rgba('#442c2e')

        AKNavigationrailItem:
            text: 'Shop'
            font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
            markup: True
            icon: 'shopping'

            active_text_color: rgba('#442c2e')
            icon_color: rgba('#442c2e')
            active_icon_color: rgba('#442c2e')

            on_release: app.show_screen('shop')

        AKNavigationrailItem:
            text: 'Cart'
            markup: True
            font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
            icon: 'cart'
            active_text_color: rgba('#442c2e')
            icon_color: rgba('#442c2e')
            active_icon_color: rgba('#442c2e')
            on_release: app.show_screen('cart')

        AKNavigationrailItem:
            text: 'Settings'
            font_name: 'assets/fonts/Rubik/Rubik-Light.ttf'
            markup: True
            icon: 'cog'

            active_text_color: rgba('#442c2e')
            icon_color: rgba('#442c2e')
            active_icon_color: rgba('#442c2e')

        AKNavigationrailCustomItem:

        AKNavigationrailContent:
            ScreenManager:
                id: manage
                Store:
                    id: shop
                    name: 'shop'

                Cart:
                    id: cart
                    name: 'cart'
